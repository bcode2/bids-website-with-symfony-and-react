{% extends 'base.html.twig' %}

{% block body %}
    <div style="width:80%;margin: 40px auto 40px auto;text-align:center;padding: 0 200px 0 200px;background: white;">
        <h3>EDICIÃ“N DE LA SUBASTA</h3>
        <div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success  alert-dismissible fade show" role="alert">
                    <strong> {{ message }}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        </div>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        <button type="submit" value="Edit" class="btn btn-warning btn-lg btn-block" style="margin: 10px 0;">Guardar
            cambios
        </button>
        {{ form_end(edit_form) }}
        <ul class="list-group list-unstyled">
            <li>
                <a href="{{ path('asset_list') }}">
                    <button type="button" class="btn btn-primary btn-lg btn-block" style="margin: 10px 0;">Regresar al
                        listado
                    </button>
                </a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <button type="submit" value="Delete" class="btn btn-danger btn-lg btn-block" style="margin: 10px 0;">
                    Borrar subasta
                </button>
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
